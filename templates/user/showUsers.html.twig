{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block content %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Role</th>
                <th scope="col">Created</th>
                <th scope="col">Last login</th>
            </tr>
        </thead>
        <tbody>
        {% if users %}
            {% for user in users %}
                {#{{ dump(article) }}#}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ 'user.roles' }}</td>
                    <td>{{ user.created|format_datetime() }}</td>
                    <td>
                    {% if user.last_login is defined %}
                        {{ user.last_login|format_datetime() }}
                    {% else %}
                        Never
                    {% endif %}
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endblock %}